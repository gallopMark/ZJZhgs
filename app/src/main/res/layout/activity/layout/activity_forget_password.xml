<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_30"
            android:src="@mipmap/ic_login_logo" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_drawable_phone_icon"
            android:drawablePadding="@dimen/margin_10"
            android:hint="@string/forgetpw_phone_hint"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_15"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/lightgrey" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_drawable_password_icon"
            android:drawablePadding="@dimen/margin_10"
            android:hint="@string/forgetpw_password_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_15"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/lightgrey" />

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_drawable_password_icon"
            android:drawablePadding="@dimen/margin_10"
            android:hint="@string/forgetpw_password2_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_15"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/lightgrey" />

        <LinearLayout
            android:id="@+id/llVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etVerificationCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/ic_drawable_yzm_icon"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/forgetpw_code_hint"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_15"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvGetCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corners_30dp"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/login_getverificationCode"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/lightgrey" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_35"
            android:background="@mipmap/ic_button_corner_bg"
            android:text="@string/forgetpw_reset"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>