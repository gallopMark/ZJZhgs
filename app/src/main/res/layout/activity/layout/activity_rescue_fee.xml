<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rescue_request_car_category"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="@string/rescue_request_asterisk"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCarCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:overScrollMode="never" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rescue_request_car_type"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="@string/rescue_request_asterisk"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCarType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:overScrollMode="never" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/color_f7"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_15">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_15"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_16"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/rescue_fee_tips"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvRemarkTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/rescue_fee_charge_basis"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvNoticeTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/rescue_fee_notice"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/font_14"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>