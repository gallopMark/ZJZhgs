<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorUserEvent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/margin_50"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_back_white"
            android:contentDescription="@string/goBack" />

        <TextView
            android:id="@+id/tvTab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/margin_5"
            android:text="@string/riders_interaction"
            android:textColor="@color/white"
            android:textSize="@dimen/app_title_textsize" />

        <TextView
            android:id="@+id/tvTab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_25"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/riders_organize"
            android:textColor="@color/colorTransparent"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvTab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_25"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/riders_alive"
            android:textColor="@color/colorTransparent"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>