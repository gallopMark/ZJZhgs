<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_20"
    android:paddingBottom="@dimen/margin_20">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/dialog_authentication_title"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_18" />

    <ImageView
        android:id="@+id/ivLicensePlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@mipmap/ic_chepairz" />

    <ImageView
        android:id="@+id/ivRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLicensePlate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@mipmap/ic_shimingrz" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRealName"
        android:layout_alignLeft="@+id/ivRealName"
        android:layout_alignRight="@+id/ivRealName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_4"
        android:text="@string/dialog_authentication_tips"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_16" />

    <ImageView
        android:id="@+id/ivBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@mipmap/ic_button_talk_later" />
</RelativeLayout>