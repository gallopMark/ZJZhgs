<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_20"
    android:paddingBottom="@dimen/margin_20">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/dialog_bindcar_title"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:lineSpacingExtra="@dimen/margin_4"
        android:text="@string/dialog_bindcar_content"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/ic_button_corner_bg"
        android:gravity="center"
        android:text="@string/dialog_bindcar_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="@string/dialog_bindcar_cancel"
        android:textColor="@color/gary"
        android:textSize="@dimen/font_16" />
</LinearLayout>