<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corners_white_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_4"
        android:text="@string/dialog_riders_agreement_title"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:lineSpacingExtra="@dimen/margin_2"
        android:maxHeight="@dimen/margin_250"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDisagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_f2"
            android:paddingTop="@dimen/margin_13"
            android:paddingBottom="@dimen/margin_13"
            android:text="@string/disagree"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_16" />

        <Button
            android:id="@+id/btAgree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_riders_button_bg"
            android:paddingTop="@dimen/margin_13"
            android:paddingBottom="@dimen/margin_13"
            android:text="@string/agree"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>