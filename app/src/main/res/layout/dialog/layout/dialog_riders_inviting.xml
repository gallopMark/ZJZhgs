<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_corners_white_5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/riders_inviting_title"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tvJoinToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_2"
            android:text="@string/riders_inToken"
            android:textColor="@color/gary"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvInToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_inviting_intoken"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/inviting_with_token"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvInFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:drawableTop="@mipmap/ic_inviting_friends"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/inviting_with_friends"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@mipmap/ic_close_white" />
</LinearLayout>