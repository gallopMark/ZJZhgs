<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_corners_5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_version_update_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/minus_10"
        android:padding="@dimen/margin_20">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_update_explain"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:minHeight="@dimen/margin_100"
            android:textColor="@color/blow_gray"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_f2"
            android:paddingBottom="@dimen/margin_13"
            android:paddingTop="@dimen/margin_13"
            android:text="@string/version_update_cancel"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_16" />

        <Button
            android:id="@+id/btConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_button_default"
            android:paddingBottom="@dimen/margin_13"
            android:paddingTop="@dimen/margin_13"
            android:text="@string/version_update_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>