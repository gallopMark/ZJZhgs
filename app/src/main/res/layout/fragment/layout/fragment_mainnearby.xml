<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitetransparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_10"
    android:paddingTop="@dimen/margin_15"
    android:paddingRight="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_left_icon"
            android:drawablePadding="@dimen/margin_4"
            android:text="@string/home_mynearby"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNearByToll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/home_nearby_toll"
                android:textColor="@color/tv_tab_textcolor_selector"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvNearByService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/home_nearby_service"
                android:textColor="@color/tv_tab_textcolor_selector"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvNearByScenic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/home_nearby_scenic"
                android:textColor="@color/tv_tab_textcolor_selector"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvNearByMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/home_nearby_more"
                android:textColor="@color/tv_tab_textcolor_selector"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLocationFailure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/ic_location_failure"
        android:drawablePadding="@dimen/margin_10"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:text="@string/home_location_failure_tips"
        android:textSize="@dimen/font_16"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/flNearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>