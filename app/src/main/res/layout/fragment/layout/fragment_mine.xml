<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_mine_top_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15">

        <LinearLayout
            android:id="@+id/llTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivUserIcon"
                android:layout_width="@dimen/margin_70"
                android:layout_height="@dimen/margin_70"
                android:layout_marginLeft="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_user_default" />

            <LinearLayout
                android:id="@+id/llUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@string/mine_top_edit_tips"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNotLogged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_login_or_register"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@string/mine_top_tips"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMyBurst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTop="@mipmap/ic_mine_draw_myburst"
                android:gravity="center"
                android:text="@string/mine_my_burst"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvMySubscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTop="@mipmap/ic_mine_draw_mysubscribe"
                android:gravity="center"
                android:text="@string/mine_my_subscribe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvRescueRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTop="@mipmap/ic_mine_draw_rescuerecord"
                android:gravity="center"
                android:text="@string/mine_rescue_record"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8"
        android:background="@color/color_f7" />

    <RelativeLayout
        android:id="@+id/rlMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:padding="@dimen/margin_12">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_mine_draw_message"
            android:drawablePadding="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/mine_message_center"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:id="@+id/ivNewMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:visibility="gone"
            android:layout_toRightOf="@+id/tvMessage"
            android:src="@mipmap/ic_red_point" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12"
        android:background="@color/color_f7" />

    <TextView
        android:id="@+id/tvMyCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_mine_draw_car"
        android:drawablePadding="@dimen/margin_10"
        android:drawableRight="@mipmap/ic_arrow_right_grey"
        android:gravity="center|left"
        android:padding="@dimen/margin_12"
        android:text="@string/mine_my_car"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12"
        android:background="@color/color_f7" />

    <TextView
        android:id="@+id/tvShareAPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_mine_draw_share"
        android:drawablePadding="@dimen/margin_10"
        android:drawableRight="@mipmap/ic_arrow_right_grey"
        android:gravity="center|left"
        android:padding="@dimen/margin_12"
        android:text="@string/mine_share_app"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_mine_draw_settings"
        android:drawablePadding="@dimen/margin_10"
        android:drawableRight="@mipmap/ic_arrow_right_grey"
        android:gravity="center|left"
        android:padding="@dimen/margin_12"
        android:text="@string/mine_settings"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14" />
</LinearLayout>