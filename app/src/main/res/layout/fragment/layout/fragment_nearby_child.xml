<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_20"
        android:paddingTop="@dimen/margin_20"
        android:visibility="visible">

        <com.uroad.zhgs.widget.CircularProgressView
            android:id="@+id/cpvLoading"
            android:layout_width="@dimen/margin_22"
            android:layout_height="@dimen/margin_22"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12"
            app:border_Width="@dimen/margin_3"
            app:minSweepAngle="60" />

        <TextView
            android:id="@+id/mLoadingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/loading"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/ic_nodata"
        android:drawablePadding="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/home_nearby_empty"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_16"
        android:visibility="gone" />
</FrameLayout>