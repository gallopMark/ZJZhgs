<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_14"
    android:paddingTop="@dimen/margin_14">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStrategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/maproute_color1_selector"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:textColor="@color/maproute_color2_selector"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvMile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:textColor="@color/maproute_color1_selector"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_1"
        android:layout_height="match_parent"
        android:background="@color/color_f7" />
</LinearLayout>