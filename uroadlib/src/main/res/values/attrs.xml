<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressBar">
        <attr name="arc_color" format="color" />
        <attr name="progress_color" format="color" />
        <attr name="arc_width" format="dimension" />
        <attr name="progress_width" format="dimension" />
        <attr name="start_angle" format="integer" />
        <attr name="sweep_angle" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="color_array" format="reference" />
        <attr name="currentValue" format="integer" />
        <attr name="aniSpeed" format="integer" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rippleColor" format="color" />
        <attr name="alphaFactor" format="float" />
        <attr name="hover" format="boolean" />
    </declare-styleable>

    <!--Banner无限轮播属性-->
    <declare-styleable name="BannerView">
        <attr name="bannerPageMargin" format="dimension" />
        <attr name="bannerPagePercent" format="float" />
        <attr name="bannerPageScale" format="float" />
        <attr name="bannerPageAlpha" format="float" />
        <attr name="bannerScrollDuration" format="integer" />
        <attr name="bannerAnimDuration" format="integer" />
        <attr name="bannerAnimScroll" format="boolean" />
        <attr name="bannerAutoScroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
</resources>